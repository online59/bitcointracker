<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CurrentPriceFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="160dp"
            android:gravity="center"
            android:background="@color/purple_500"
            android:layout_height="wrap_content"
            android:text="@string/bitcoin_in_dollar"
            android:textColor="@color/white"
            android:textSize="@dimen/header_text_size" />

        <TextView
            android:id="@+id/tv_bitcoin_in_dollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/header_text_size" />

        <TextView
            android:layout_width="160dp"
            android:gravity="center"
            android:background="@color/purple_500"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/header_margin_top"
            android:text="@string/bitcoin_in_pond"
            android:textColor="@color/white"
            android:textSize="@dimen/header_text_size" />

        <TextView
            android:id="@+id/tv_bitcoin_in_pond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/header_text_size" />

        <TextView
            android:layout_width="160dp"
            android:gravity="center"
            android:background="@color/purple_500"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/header_margin_top"
            android:text="@string/bitcoin_in_euro"
            android:textColor="@color/white"
            android:textSize="@dimen/header_text_size" />

        <TextView
            android:id="@+id/tv_bitcoin_in_euro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/header_text_size" />


    </LinearLayout>

</FrameLayout>